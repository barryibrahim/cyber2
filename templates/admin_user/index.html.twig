{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-danger mb-4">Gestion des utilisateurs</h1>

    <a href="{{ path('admin_user_add') }}" class="btn btn-success mb-3">Ajouter un utilisateur</a>

    <table class="table table-striped table-hover text-center align-middle">
        <thead class="table-danger">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Rôles</th>
                <th>Statut</th>
                <th>Ville</th>
                <th>Historique connexions</th> <!-- ✅ nouvelle colonne -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>
                    {% if user.isActive %}
                        <span class="badge bg-success">Actif</span>
                    {% else %}
                        <span class="badge bg-danger">Suspendu</span>
                    {% endif %}
                </td>
                <td>{{ user.ville }}</td>

                <!-- ✅ Historique des connexions -->
                <td>
                    {% if user.historiqueConnexions %}
                        {% for date in user.historiqueConnexions|slice(-3, 3) %}
                            <div class="badge bg-secondary d-block mb-1">{{ date }}</div>
                        {% endfor %}
                    {% else %}
                        <em class="text-muted">Aucune connexion</em>
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
                    <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm"
                       onclick="return confirm('Supprimer cet utilisateur ?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
