{% extends 'base.html.twig' %}

{% block title %}
    Changer le Mot de Passe
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 display-10 fw-bold">
            Modifier votre mot de passe du motde passe
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-primary">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-primary mt-2">Modifier le mot de passe</button>
                </div>
                {{ form_end(form) }}

                {% if app.session.flashBag.has('error') %}
                    <div class="alert alert-danger mt-2">
                        {{ app.session.flashBag.get('error')[0] }}
                    </div>
                {% endif %}

                {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success mt-2">
                        {{ app.session.flashBag.get('success')[0] }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
